section {
  background: white;
  display: block;
  margin: 0 auto;
  margin-bottom: 0.5cm;
  box-shadow: 0 0 0.5cm rgba(0, 0, 0, 0.5);
}

section[size="A4"] {
  width: 21cm;
  height: 29.7cm;
}
section[size="A44"] {
  width: 21cm;
}

div.pageOne {
  background-image: url("../../assets/img/1.jpg");
  background-repeat: no-repeat;
  background-size: 21cm 29.7cm;
  width: 100%;
  height: 29.7cm;
}
div.pageThree form {
  padding: 20px;
  /* direction: rtl; */
}
div.pageThree {
  background-image: url("../../assets/img/2.png");
  background-repeat: repeat;
  background-size: 21cm 29.7cm;
  width: 100%;
  min-height: 800%;

  /* text-align: right; */
}
div.pageThreeShow {
  background-image: url("../../assets/img/2.png");
  background-repeat: no-repeat;
  background-size: 21cm 29.7cm;
  width: 100%;
  height: 100%;

  /* text-align: right; */
}

pre {
  padding: 50px;
  text-align: left;
  direction: ltr;
}

.pageTwo {
  background-image: url("../../assets/img/2.png");
  background-repeat: repeat;
  background-size: 21cm 29.7cm;
  opacity: 0.5;
}

div.pageOne img {
  width: 70%;
  margin-top: 20%;
  margin-left: 17%;
  margin-bottom: 80px;
}

.upload-image input {
  display: block !important;
  width: 158px !important;
  height: 45px !important;
  opacity: 0 !important;
  overflow: hidden !important;
}

textarea {
  width: 100%;
  height: 200px;
  padding: 20px;
}

img {
  border-radius: 10%;
}

path {
  fill: transparent;
}

text {
  fill: #ff9800;
}

#show {
  /* direction: rtl; */
  width: 100%;
  margin: 10px auto;
}

#show thead tr th {
  height: 40px;
  padding: 5px;
  text-align: center;
  border: 2px solid black;
}

#show tr td {
  font-size: 14px;
  height: 40px;
  padding: 5px;
  text-align: center;
  border: 2px solid black;
}

button {
  padding: 5px;
  padding-left: 20px;
  padding-right: 20px;
  border-radius: 10px;
  background-color: rgb(207, 207, 243);
  font-weight: 900;
}

button:hover {
  background-color: rgb(237, 237, 250);
  color: red;
}

div.intro {
  text-align: center;
  font-weight: 700;
  font-size: 25px;
  color: #488fa2;
  font-family: revert;
}
div.points ul li {
  list-style: none;
  padding: 10px;
}
div.points {
  text-align: center;
  font-weight: 700;
  font-size: 25px;
  color: #446f6d;
  margin-top: 40%;
}

fieldset.scheduler-border {
  border: 3px groove #ddd !important;
  padding: 0 1.4em 1.4em 1.4em !important;

  -webkit-box-shadow: 0px 0px 0px 0px #000;
  box-shadow: 0px 0px 0px 0px #000;
  /* text-align: right; */
  /* direction: rtl; */
  width: 90%;
  margin-left: 5%;
}

legend.scheduler-border {
  font-size: 1.2em !important;
  font-weight: bold !important;
  text-align: right !important;
  border: none;
  width: 100px;
}
input[type="radio"] {
  width: 5%;
  margin-left: 12%;
}
input[type="checkbox"] {
  width: 5%;
  margin-left: 3%;
}
input {
  width: 170px;
  margin-left: 5px;
  margin-bottom: 15px;
}
label.CompName {
  font-weight: 700;
  font-size: 20px;
  padding-left: 10px;
}
label {
  font-weight: 700;
  font-size: 15px;
  padding-left: 10px;
}
select {
  width: 192px;

  margin-right: 3px;
  padding: 5px;
  border-radius: 5px;
  font-weight: 600;
  padding-right: 5px;
  border: 2px solid black;
}
select {
  border: 2px #6b6b69a8 solid;
}
input {
  padding: 5px;
  border-radius: 5px;
  font-weight: 600;
  padding-right: 5px;
  border: 2px #6b6b69a8 solid;
}
fieldset {
  font-weight: 500;
}
hr {
  background-color: rgb(134, 133, 133);
  height: 3px;
}
.form-group {
  padding-top: 20px;
}
@media print {
  body,
  section {
    margin: 0;
    box-shadow: 0;
  }
  textarea {
    width: 100%;
  }
}
.btn-basic {
  background-color: #fff;
  color: #dc3545;
  font-weight: 600;
  border: #dc3545 2px solid;
  margin-left: 20px;
}
.btn-basic:hover {
  color: #fff;
  background-color: #dc3545;
}
.btn-success {
  background-color: #fff;
  color: #28a745;
  font-weight: 600;
  border: #28a745 2px solid;
  margin-left: 20px;
}
.btn-success:hover {
  color: #fff;
  background-color: #28a745;
}

option.name {
  color: red !important;
}
